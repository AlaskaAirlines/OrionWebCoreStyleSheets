{
  "name": "@alaskaairux/orion-web-core-style-sheets",
  "description": "Orion core foundation Sass UI Kit",
  "version": "0.5.0",
  "author": "Product design and research",
  "main": "src/",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/OrionWebCoreStyleSheets"
  },
  "peerDependencies": {
    "@alaskaairux/orion-design-tokens": "^2.0.526637919",
    "node-sass": "^4.11.0",
    "style-dictionary": "^2.7.0"
  },
  "dependencies": {
    "focus-visible": "^4.1.5"
  },
  "devDependencies": {
    "@alaskaairux/orion-design-tokens": "^2.0.526637919",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "auto-changelog": "^1.13.0",
    "concat": "^1.0.3",
    "copyfiles": "^2.1.0",
    "husky": "^2.3.0",
    "node-sass": "^4.12.0",
    "sass-lint": "^1.13.1",
    "semantic-release": "^15.13.14",
    "style-dictionary": "^2.7.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "scripts": {
    "changelog": "auto-changelog --template ./scripts/templates/template.hbs --output ./CHANGELOG.md -p -b 5",
    "copySass": "copyfiles -u 1 -V './src/**/*.scss' ./dist",
    "concat": "concat -o ./README.md ./README.md ./CHANGELOG.md",
    "copyFontsTest": "copyfiles -f -V './src/fonts/*.*' ./test/fonts",
    "copyFontsDist": "copyfiles -f -V './src/fonts/*.*' ./dist/fonts",
    "buildTokens": "node scripts/styleDictionary.js",
    "sassLint": "sass-lint --verbose",
    "buildCss": "node-sass --include-path scss scripts/testBuild.scss test/css/testBuild.css",
    "cssLint": "stylelint './test/css/*.css'",
    "test": "npm run copyFontsTest || npm run buildTokens || npm run sassLint || npm run buildCss || npm run cssLint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branch": "master"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "alaska airlines",
    "style dictionary",
    "orion design system",
    "css",
    "properties",
    "tokens",
    "sass"
  ],
  "contributors": [
    {
      "name": "Dale Sande",
      "email": "dale.sande@alaskaair.com"
    },
    {
      "name": "Camron Lockeby",
      "email": "camron.lockeby@AlaskaAir.com"
    },
    {
      "name": "Kevin Sonnichsen",
      "email": "Kevin.Sonnichsen@alaskaair.com"
    }
  ]
}
